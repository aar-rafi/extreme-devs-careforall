# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/careforall
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=careforall

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# SSLCommerz Payment Gateway
SSLCOMMERZ_STORE_ID=your-store-id
SSLCOMMERZ_STORE_PASSWORD=your-store-password
SSLCOMMERZ_API_URL=https://sandbox.sslcommerz.com
SSLCOMMERZ_WEBHOOK_URL=http://localhost:3000/api/payments/webhook/ipn

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@careforall.com

# Frontend
FRONTEND_URL=http://localhost:5173

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_URL=http://localhost:3000

# Service Ports
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_URL=http://auth-service:3001

CAMPAIGN_SERVICE_PORT=3002
CAMPAIGN_SERVICE_URL=http://campaign-service:3002

PLEDGE_SERVICE_PORT=3003
PLEDGE_SERVICE_URL=http://pledge-service:3003

PAYMENT_SERVICE_PORT=3004
PAYMENT_SERVICE_URL=http://payment-service:3004

QUERY_SERVICE_PORT=3005
QUERY_SERVICE_URL=http://query-service:3005

ADMIN_SERVICE_PORT=3006
ADMIN_SERVICE_URL=http://admin-service:3006

NOTIFICATION_SERVICE_PORT=3007
NOTIFICATION_SERVICE_URL=http://notification-service:3007

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Logging (ELK)
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5000

# Tracing
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_AGENT_PORT=6831

# Bull Board (Queue Monitoring)
BULL_BOARD_PORT=3100
